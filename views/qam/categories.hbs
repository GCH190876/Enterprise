<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    {{> qamHeader}}
    
    <div class="container" style="margin-top:30px">
        <div class="row">
        
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{mess}}
                    {{#each model}}
                    <tr>
                        <td>{{category}}</td>
                        <td>{{description}}</td>
                        <td>
                            <a href="/qam/deleteCat?id={{_id}}" onclick="return confirmDelete();"><i class="fas fa-trash-alt fa-lg text-danger"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>    
            <button type="button" class="btn btn-dark text-white" data-toggle="modal" data-target="#myModal">Create New Category</button>
              
              <!-- The Modal -->
            <div class="modal" id="myModal">
                <div class="modal-dialog">

                    <div class="modal-content p-3">
              
                        <div class="modal-header">
                            <h4 class="modal-title">New Category</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                    
                        <form action="/qam/addCat" method="POST">
                            <div class="modal-body">
                                <div class="form-group">
                                    <label >Category</label>
                                    <input type="text" class="form-control" name="txtCategory" required>
                                </div>

                                <div class="form-group">
                                    <label class="form-check-label">Description</label>
                                    <input type="text" class="form-control" name="txtDescription" required/>
                                </div>
                            </div>
                            <div class="modal-body">
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </form>
              
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br><br>
    <script>
        function confirmDelete() {
            var del = confirm("Do you want to delete this course?");
            if (del)
                return true;
            else
                return false;
        }
    </script>
</body>
</html>