<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../css/adminSetDate.css">
    <title>Courses</title>
</head>
<body>
    <div class="container-fluid">
    {{> adminHeader}}
        <div class="container mt-3">
            <div class="right-content">
                <div>
                    <h3>Courses Details</h3>
                </div>
                <div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Courses</th>
                                <th>First Closure Date</th>
                                <th>Final Closure Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each model}}
                            <tr>
                                <td>{{courseName}}</td>
                                <td>{{deadLine1}}</td>
                                <td>{{deadLine2}}</td>
                                <td>
                                    <a href="/admin/editCourse/{{this._id}}">Edit</a>
                                    <a href="/admin/deleteCourse?id={{_id}}" onclick="return confirmDelete();">Delete</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <a href="/admin/addCourse" class="btn btn-primary">Create New Course</a>
                </div>
                
              </div>
            </div>
        </div>

    </main>
    </div>

    </div>
    <script>
        function confirmDelete() {
            var del = confirm("Do you want to delete this course?");
            if (del)
                return true;
            else
                return false;
        }
    </script>
</body>

</html>
