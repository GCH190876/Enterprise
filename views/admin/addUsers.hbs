<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="../../css/adminSetDate.css">
    <title>Add User</title>
</head>
<body>
    <div class="container-fluid">
    {{> adminHeader}}
    <div class="container mt-3">
        <div class="right-content">
            <div>
                <h3>User Accounts</h3>
            </div>
            <div >
                <table class="table table-bordered ">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Department</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each model}}
                        <tr>
                            <td>{{userName}}</td>
                            <td>{{email}}</td>
                            <td>{{role}}</td>
                            <td>{{department}}</td>
                            <td>
                                <a href="/admin/editUser/{{this._id}}"><i class="far fa-edit fa-lg ml-1"></i>&nbsp&nbsp</a>
                                <a href="btn"><i class="fas fa-trash-alt fa-lg text-danger"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Create New User</button>
            <!-- The Modal -->
                <div class="modal" id="myModal">
                    <div class="modal-dialog">

                    <div class="modal-content p-3">
                
                        <div class="modal-header">
                        <h4 class="modal-title">New User</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        

                        <form action="/admin/addUsers" method="POST">
                        <div class="modal-body">
                            <div class="form-group">
                                <label>Username</label>
                                <input class="form-control" name="txtName" required>
                            </div>

                            <div class="form-group">
                                <label class="form-check-label">Email</label>
                                <input type="email" class="form-control" name="txtEmail" required/>
                            </div>

                            <div class="form-group">
                                <label class="form-check-label">Password</label>
                                <input type="password" class="form-control" name="txtPass" required>
                            </div>

                            <div class="form-group">
                                <label for="role" class="form-check-label">Role</label>
                                <select class="form-select form-control border border-default rounded" aria-label="Default select example" name="txtRole">
                                    <option>Admin</option>
                                    <option>Quality Assurance Manager</option>
                                    <option >Quality Assurance Coordinator </option>
                                    <option >Staff</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="department" class="form-check-label">Department</label>
                                <select class="form-select form-control border border-default rounded" aria-label="Default select example" name="txtDepartment">
                                    <option>None</option>
                                    <option>Intelligent Technology</option>
                                    <option >Business </option>
                                    <option >Design</option>
                                </select>
                            </div>

                        </div>
                        <div class="modal-body">
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                        </form>
                
                        <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                
                    </div>
                </div>
              </div>
        </div>
    </div>
    </div>

</body>
</html>
